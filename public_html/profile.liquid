{% include 'partials/header-dashboard' %}

<section>
  <div class="container">
    {% if error %}<p class="error">{{ error }}</p>{% endif %}
    {% if info %}<p class="info">{{ info }}</p>{% endif %}
    <div class="row">
      <div class="six columns">
        <div class="box">
          <p><strong>Update Email</strong></p>
          <form method="post">
            <p><input type="email" name="email" placeholder="Email" value="{{acc_email}}" class="u-full-width"></p>
            <p><button class="button button-primary u-full-width">Update</button></p>
          </form>
        </div>
        <div class="box">
          <p><strong>Delete Account</strong></p>
          <p>This is not a recoverable action. All data related to the profile&mdash;domains, data and profile will be deleted. Be sure you really want to do this before you continue.</p>
          <form method="post">
            <input type="hidden" name="delete" value="{{acc_id}}">
            <button class="button button-delete u-full-width" style="display:none" id="del-btn" type="submit">Confirm Delete</button>
            <button class="button u-full-width" type="button" onclick="this.style.display='none';document.getElementById('del-btn').style.display='block'">Delete</button>
          </form>
        </div>
      </div>
      <div class="six columns">
        <div class="row">
          <div class="box">
            <p><strong>Update Password</strong></p>
            <form method="post">
              <p><input type="password" name="password" placeholder="Current password" class="u-full-width"></p>
              <p><input type="password" name="new_password" placeholder="New password" class="u-full-width"></p>
              <p><button class="button button-primary u-full-width">Update</button></p>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% include 'partials/footer' %}

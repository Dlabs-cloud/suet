{% include 'partials/header-dashboard' %}

<section>
  <div class="container">
    <div class="feed">
      <div class="row th">
        <div class="two columns" >
          <a href="">When <i class="icon-arrow-down"></i></a>
        </div>
        <div class="four columns">
          Mail
        </div>
        <div class="two columns center" >
          <a href="">Deliveries (Bounced)</a>
        </div>
        <div class="two columns center" >
          <a href="">Opens (Unique)</a>
        </div>
        <div class="two columns center" >
          <a href="">Clicks (Unique)</a>
        </div>
      </div>
      {% for mail in data %}
      <div class="row">
        <div class="two columns" >
          {{ mail.timeago }}
        </div>
        <div class="four columns">
          <a href="/mails/{{ mail.msg_id }}">{{ mail.subject }}</a>
        </div>
        <div class="two columns center" >
          <a href="">{{ mail.deliveries }} <span class="fade">(0)</span></a>
        </div>
        <div class="two columns center" >
          <a href="">{{ mail.opens }} <span class="fade">(0)</span></a>
        </div>
        <div class="two columns center" >
          <a href="">{{ mail.clicks }} <span class="fade">(0)</span></a>
        </div>
      </div>
      {% endfor %}
    </div>
  </div>
</section>

</body>
</html>
